@model BattlemonASP.Models.ViewModels.BattlemonDetailViewModel
@{
    ViewData["Title"] = "EditBattlemon";
}

<h2>EditBattlemon</h2>

<h4>BattlemonDetailViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBattlemon">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="BattlemonID" class="control-label"></label>
                <input asp-for="BattlemonID" class="form-control" />
                <span asp-validation-for="BattlemonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthPoints" class="control-label"></label>
                <input asp-for="HealthPoints" class="form-control" />
                <span asp-validation-for="HealthPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attack" class="control-label"></label>
                <input asp-for="Attack" class="form-control" />
                <span asp-validation-for="Attack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Defence" class="control-label"></label>
                <input asp-for="Defence" class="form-control" />
                <span asp-validation-for="Defence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speed" class="control-label"></label>
                <input asp-for="Speed" class="form-control" />
                <span asp-validation-for="Speed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">cancel</a>
</div>


